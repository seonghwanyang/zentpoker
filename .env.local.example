# .env.local 파일에 아래 내용을 복사하여 실제 값으로 교체하세요

# Supabase Database URL
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres?schema=public"

# Supabase API Keys (Settings → API에서 확인)
NEXT_PUBLIC_SUPABASE_URL="https://[PROJECT-REF].supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="[YOUR-ANON-KEY]"
SUPABASE_SERVICE_ROLE_KEY="[YOUR-SERVICE-ROLE-KEY]"

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"  # 프로덕션에서는 실제 도메인으로 변경
NEXTAUTH_SECRET="[32자 이상의 랜덤 문자열]"  # openssl rand -base64 32 명령으로 생성

# Google OAuth (Google Cloud Console에서 생성)
GOOGLE_CLIENT_ID="[YOUR-GOOGLE-CLIENT-ID].apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="[YOUR-GOOGLE-CLIENT-SECRET]"

# 카카오페이 송금 링크
NEXT_PUBLIC_KAKAO_PAY_LINK="https://qr.kakaopay.com/[YOUR-KAKAO-PAY-ID]"

# 계좌 정보
NEXT_PUBLIC_BANK_NAME="카카오뱅크"
NEXT_PUBLIC_BANK_ACCOUNT="3333-12-1234567"
NEXT_PUBLIC_ACCOUNT_HOLDER="홍길동"

# 관리자 이메일
ADMIN_EMAIL="admin@zentpoker.com"

# 앱 정보
NEXT_PUBLIC_APP_NAME="Zentpoker"
NEXT_PUBLIC_APP_URL="https://zentpoker.com"  # 실제 도메인으로 변경

# Sentry (선택사항 - 에러 트래킹)
SENTRY_DSN="https://[YOUR-SENTRY-DSN].ingest.sentry.io/[PROJECT-ID]"
